#!/bin/bash
# Written By Seeker for StormFish OS/Storm OS
# Forked and Inspired by Xerolinux-Tool

id=$(echo $[($RANDOM % ($[10000 - 32000] + 1)) + 10000] )
echo "$id"

yad --plug="$id" --tabnum=1 --form \
--field="<b>Visit The StormOS Site</b>":fbtn "xdg-open https://storm-os.godaddysites.com" \
--field="<b>Or Visit The StormFish OS Site</b>":fbtn "xdg-open https://sourceforge.net/projects/stormfish-os/" \
--field="<b>StormOS ReadMe</b>":fbtn '/usr/local/bin/data/about' \
--field="<b>Disable Autostart</b>":fbtn "xfce4-terminal -e 'rm $HOME/.config/autostart/sysconfig.desktop'" \
--field="Reserved:BTN" "eom" &> /tmp/data1 &

yad --plug="$id" --tabnum=2 --form \
--field="<b>Step 1. Refresh Mirrors</b>":FBTN "xfce4-terminal -e 'sudo reflector --verbose -l 20 --sort rate --save /etc/pacman.d/mirrorlist'" \
--field="<b>Step 2. System Updates</b>":FBTN "xfce4-terminal  -e 'sudo pacman -Syyu'" \
--field="<b>Step 3. Aur Updates</b>":FBTN "xfce4-terminal -e 'yay -Syyu'" \
--field="<b>Step 4. (Optional) Arch Keyring Updater</b>":FBTN "xfce4-terminal -e 'sudo pacman -S archlinux-keyring --noconfirm'" \
--field="Reserved:BTN" "eom" &> /tmp/data2 &



yad --plug="$id" --tabnum=3 --form \
--field="<b>Install Discord</b>":fbtn "xfce4-terminal -e 'sudo pacman -S discord --noconfirm '" \
--field="<b>Install Steam Native</b>":fbtn "xfce4-terminal -e 'sudo pacman -S --noconfirm steam-native-runtime gamemode'" \
--field="<b>Install Heroic Launcher</b>":fbtn "xfce4-terminal -e 'yay -S --noconfirm heroic-games-launcher-bin gamemode'" \
--field="<b>Install Lutris Launcher</b>":fbtn "xfce4-terminal -e 'sudo pacman -S --noconfirm lutris gamemode'" \
--field="<b>Install ProtonGE Updater</b>":fbtn "xfce4-terminal -e 'yay -S --noconfirm proton-community-updater'" \
--field="<b>Install Mangohud/Goverlay</b>":fbtn "xfce4-terminal -e 'yay -S --noconfirm mangohud goverlay-bin'" \
--field="<b>Install Bottles Launcher</b>":fbtn "xfce4-terminal -e 'yay -S --noconfirm bottles'" \
--field="Reserved:BTN" "eom" &> /tmp/data3 &


yad --plug="$id" --tabnum=4 --form \
--field="<b>Distrowatch</b>":fbtn "xdg-open https://distrowatch.com" \
--field="<b>Gofund.me Page</b>":fbtn "xdg-open https://gofund.me/d954872d" \
--field="<b>Patreon Page</b>":fbtn "xdg-open https://patreon.com/benfitzpatrick" &> /tmp/data4 &


yad --notebook --key="$id" --center --tab-pos=left --width=480 --height=175 --tab "<b>(1).Welcome</b>" --tab="<b>(2).Maintenance and Updates</b>" --tab="<b>(3).Programs and Games Installer</b>" --tab="<b>(4).Donations</b>"  --image=/usr/share/icons/scalable/apps/stormos.png \
--title="StormFish OS and Storm OS Utilities Program v1.0.5" \
--text="<b>Greetings $USER Use this tool to Maintain and Upgrade your StormFish OS and or Storm OS</b>" \
--justify=center \

#StormOS." --image=/usr/share/icons/scalable/apps/stormos.png"  \

case $? in
    0)
    exit;;
    1)
    exit;;
    70)
    exit;;
    252)
    exit;;
esac


#StormOS." --image=/usr/share/icons/scalable/apps/stormos.png  \
