#!/bin/bash
# Written By Seeker for StormFish OS/Storm OS
# Forked and Inspired by Xerolinux-Tool

id=$(echo $[($RANDOM % ($[10000 - 32000] + 1)) + 10000] )
echo "$id"

yad --plug="$id" --tabnum=1 --form \
--field="<b>Visit The StormOS Site</b>":fbtn "xdg-open https://storm-os.godaddysites.com" \
--field="<b>Or Visit The StormFish OS Site</b>":fbtn "xdg-open https://sourceforge.net/projects/stormfish-os/" \
--field="<b>StormOS ReadMe</b>":fbtn '/usr/local/bin/data/about' \
--field="<b>Step 1. Install Discord</b>":fbtn "xfce4-terminal -e 'sudo pacman -S discord --noconfirm '" \
--field="<b>Step 2. Visit us and Join The StormOS/StormFishOS Discord</b>":fbtn "xdg-open https://discord.gg/36JkjDVUP9" \
--field="Reserved:BTN" "eom" &> /tmp/data1 &

yad --plug="$id" --tabnum=2 --form \
--field="<b>Step 1. Refresh Mirrors</b>":FBTN "xfce4-terminal -e 'sudo reflector --verbose -l 20 --sort rate --save /etc/pacman.d/mirrorlist'" \
--field="<b>Step 2. System Updates</b>":FBTN "xfce4-terminal  -e 'sudo pacman -Syyu --noconfirm'" \
--field="<b>Step 3. Aur Updates</b>":FBTN "xfce4-terminal -e 'yay -Syyu --noconfirm'" \
--field="<b>Step 4. (Optional) Arch Keyring Updater</b>":FBTN "xfce4-terminal -e 'sudo pacman -S archlinux-keyring --noconfirm'" \
--field="<b>Step 5. Install Teamviewer</b>":FBTN "xfce4-terminal -e 'sudo pacman -S teamviewer --noconfirm'" \
--field="<b>Step 6. Activate Teamviewer daemon for remote access</b>":FBTN "xfce4-terminal -e ' teamviewer --daemon start'" \
--field="<b>Step 7. Launch Teamviewer for Remote Support</b>":FBTN "xfce4-terminal -e '/opt/teamviewer/tv_bin/script/teamviewer'" \
--field="<b>Step 8. Install Warpinator to share between computers in your local network</b>":FBTN "xfce4-terminal -e 'sudo pacman -S warpinator --noconfirm'" \
--field="<b>Step 9. Launch Warpinator</b>":FBTN "xfce4-terminal -e  'warpinator'" \
--field="<b>Step 10. Incase warpinator leaves a terminal open click this. </b>":FBTN "xfce4-terminal -e  'killall warpinator'" \
--field="<b>Step 11. Installation of Lshw for System Info</b>":FBTN "xfce4-terminal -e  'sudo pacman -S lshw --noconfirm'" \
--field="Reserved:BTN" "eom" &> /tmp/data2 &



yad --plug="$id" --tabnum=3 --form \
--field="<b>Install Steam Native</b>":fbtn "xfce4-terminal -e 'sudo pacman -S --noconfirm steam-native-runtime gamemode'" \
--field="<b>Install Heroic Launcher</b>":fbtn "xfce4-terminal -e 'yay -S --noconfirm heroic-games-launcher-bin gamemode'" \
--field="<b>Install Lutris Launcher</b>":fbtn "xfce4-terminal -e 'sudo pacman -S --noconfirm lutris gamemode'" \
--field="<b>Install ProtonGE Updater</b>":fbtn "xfce4-terminal -e 'yay -S --noconfirm proton-community-updater'" \
--field="<b>Install Mangohud/Goverlay</b>":fbtn "xfce4-terminal -e 'yay -S --noconfirm mangohud goverlay-bin'" \
--field="<b>Install Bottles Launcher</b>":fbtn "xfce4-terminal -e 'yay -S --noconfirm bottles'" \
--field="Reserved:BTN" "eom" &> /tmp/data3 &



yad --plug="$id" --tabnum=4 --form \
--field="<b>Step 1.Enable Cups/Printer</b>":fbtn "xfce4-terminal -e 'systemctl enable --now cups'" \
--field="<b>Step 2. Cups/Printer Web Interface</b>":fbtn "xdg-open http://127.0.0.1:631" \
--field="Reserved":btn "eom" &> /tmp/data4 &


yad --plug="$id" --tabnum=5 --form \
--field="<b>Distrowatch</b>":fbtn "xdg-open https://distrowatch.com" \
--field="<b>Gofund.me Page</b>":fbtn "xdg-open https://gofund.me/d954872d" \
--field="<b>Patreon Page</b>":fbtn "xdg-open https://patreon.com/benfitzpatrick" &> /tmp/data5 &


yad --notebook --key="$id" --center --tab-pos=top --width=480 --height=175 --tab="<b>(1).Welcome</b>" --tab="<b>(2).Maintenance and Updates and Support</b>" --tab="<b>(3).Game Program Installers</b>" --tab="<b>(4).Cups/Printer Installation</b>"  --tab="<b>(5).Donations</b>"  --image=/usr/share/icons/scalable/apps/stormos.png \
--title="Storm OS Utilities Program v1.0.9" \
--text="<b>Greetings $USER Use this tool to Maintain and Upgrade your Storm OS</b>" \
--justify=center \
--button="Logout":"xfce4-session-logout" \
--button="System Info":"xfce4-terminal -H -x sudo lshw -X" \
--button="System Resources":"xfce4-terminal -H -x top" \
--button="Update Maintenance Program":"xfce4-terminal -e 'sudo pacman -S stormos-conf --noconfirm'" \
--button="Launch Terminal":"xfce4-terminal" \
--button="Launch Browser":"firefox" \
--button="Exit" \



#StormOS." --image=/usr/share/icons/scalable/apps/stormos.png"  \

case $? in
    0)
    exit;;
    1)
    exit;;
    70)
    exit;;
    252)
    exit;;
esac


#StormOS." --image=/usr/share/icons/scalable/apps/stormos.png  \
